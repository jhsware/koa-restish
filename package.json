{
  "name": "koa-restish",
  "version": "1.0.0-beta.1",
  "description": "A REST inspired data access layer for single page apps",
  "author": {
    "name": "Sebastian Ware",
    "email": "sebastian@urbantalk.se",
    "url": "https://github.com/jhsware"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/jhsware/koa-restish.git"
  },
  "license": "MIT",
  "main": "dist/restish-client.cjs.js",
  "browser": "dist/restish-client.cjs.js",
  "browserslist": "> 0.5%, not dead",
  "targets": {
    "browser": {
      "source": "src/restish-client.ts",
      "optimize": true
    },
    "koa": {
      "source": "src/koa-restish.ts",
      "distDir": "distServer",
      "engines": {
        "node": ">= 18.17"
      },
      "isLibrary": true
    },
    "express": {
      "source": "src/express-restish.ts",
      "distDir": "distServer",
      "engines": {
        "node": ">= 18.17"
      },
      "isLibrary": true
    }
  },
  "sideEffects": false,
  "devDependencies": {
    "@parcel/packager-ts": "^2.10.3",
    "@parcel/transformer-typescript-types": "^2.10.3",
    "@types/node": "^18.11.9",
    "express": "^4.17.1",
    "jest-environment-jsdom": "^29.1.2",
    "koa-json-body": "^5.3.0",
    "koa-logger": "^3.2.0",
    "koa-router": "^7.4.0",
    "koa-session": "^6.4.0",
    "koa": "^2.6.1",
    "parcel": "^2.8.0",
    "ts-jest": "^29.0.3",
    "typescript": "^5.3.3"
  },
  "dependencies": {
    "@swc/helpers": "^0.5.3",
    "axios": "^1.5.2",
    "path-to-regexp-es6": "^1.7.0"
  },
  "scripts": {
    "build": "npm run build:clean && NODE_ENV=production parcel build",
    "test": "NODE_ENV=test jest",
    "prepublishOnly": "NODE_ENV=development npm run build && NODE_ENV=test npm run test",
    "preversion": "npm run test",
    "postversion": "git push && git push --tags",
    "build:clean": "rm -rf dist/"
  }
}
